<% layout('layouts/boilerplate') %>
<div class="row">
  <h1 class="text-center">New Retreat</h1>
  <div class="col-6 offset-3 bg-dark-subtle p-3">
    <form action="/retreats" method="POST" novalidate class="validated-form" enctype="multipart/form-data">

      <div class="mb-3">
        <label for="title" class="form-label">Name: </label>
        <input type="text" id="title" name="retreat[title]" class="form-control border border-secondary" required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="type" class="form-label">Type: </label>
        <input type="text" id="type" name="retreat[type]" class="form-control border border-secondary" required>
        <div class="valid-feedback">Looks good!</div>
        <!-- <select name="retreat[type]" id="type">
          <option value="yoga">yoga</option>
          <option value="meditation">meditation</option>
          <option value="spiritual">spiritual</option>
          <option value="spa">spa</option>
        </select> -->
      </div>

      <div class="mb-3">
        <label for="location" class="form-label">Location: </label>
        <input type="text" id="location" name="retreat[location]" class="form-control border border-secondary" required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="date" class="form-label">Date: </label>
        <input type="text" id="date" name="retreat[date]" class="form-control border border-secondary" required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="events" class="form-label">Events: </label>
        <input type="text" id="events" name="retreat[events]" class="form-control border border-secondary" required>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="image" class="form-label">Add Image(s)</label>
        <input type="file" name="image" id="image" class="form-control border-bottom border-secondary" multiple>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3">
        <label for="price" class="form-label">Retreat Price: </label>
        <div class="input-group">
          <span class="input-group-text" id="price-label">$</span>
          <input type="number" step="0.01" min="0" class="form-control form-control border border-secondary" id="price"
            aria-describedby="price" placeholder="0.00" name="retreat[price]" required>
          <!-- <input type="text" class="form-control form-control border border-secondary" id="price" aria-describedby="price" placeholder="0.00" name="retreat[price]" required> -->
          <div class="valid-feedback">Looks good!</div>
        </div>
      </div>

      <div class="mb-3">
        <label for="description" class="form-label">Description: </label>
        <textarea name="retreat[description]" id="description"
          class="form-control border border-secondary" required></textarea>
        <div class="valid-feedback">Looks good!</div>
      </div>

      <div class="mb-3 mt-4">
        <button class="btn btn-success">Add Retreat</button>
      </div>
    </form>
  </div>
  <div class="col-6 offset-3">
    <a class="btn btn-secondary mx-auto my-3" href="/retreats">Cancel</a>
  </div>
</div>
